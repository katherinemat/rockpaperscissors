@{
    Layout="Shared/_Layout.cshtml";
}

  @if(@Model != null) {
    <h1>Your Game Results:</h1>
    <div class="row">
    @foreach(string item in @Model)
    {
      <div class="col-md-4">
        <h5>@item</h5>
      </div>
    }
  </div>
  } 

<form action="/" method="post">
  <div class="form-group">
    <select class="form-control" id="player1" name="player1">
      <option disabled selected>Player One, choose your weapon: </option>
      <option>rock</option>
      <option>paper</option>
      <option>scissors</option>
    </select>
  </div>
  <div class="form-group">
    <select class="form-control" id="player2" name="player2">
      <option disabled selected>Player Two, choose your weapon: </option>
      <option>rock</option>
      <option>paper</option>
      <option>scissors</option>
    </select>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Battle!</button>
</form>
